<UserControl x:Class="Benfinit_water.View.MapControlUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Benfinit_water.View"
             xmlns:maps="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Map Control -->
        <maps:Map x:Name="myMap"
                  CredentialsProvider="Your_Bing_Maps_Key"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch" />
    </Grid>
</UserControl>
